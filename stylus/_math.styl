/* use katex */
@import "https://cdn.jsdelivr.net/npm/katex@0.12.0/dist/katex.min.css";

.katex
  font-family: Math

.math-inline > .katex,
.katex .cjk_fallback
  font-size: $body-font-size

.katex-display
  position: relative
  font-size: $body-font-size * 0.9

.katex-display::after
  position: absolute
  display: block
  top: 50%
  transform: translateY(-50%)
  right: 0
